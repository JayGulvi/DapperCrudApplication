@model List<Products>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (TempData["Message"]!=null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["DMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["DMessage"]
    </div>
}
<a asp-action="AddProduct" class="btn btn-info">Add Product</a>
<br />
<br />
<table class="table">
    <thead>
        <tr style="background-color:darkblue; color:white ">
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Created Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.PId</td>
                <td style="color:darkgoldenrod"><b>@product.Pname</b></td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.PId" class="btn btn-success">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.PId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete<i class="fa-solid fa-xmark"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>