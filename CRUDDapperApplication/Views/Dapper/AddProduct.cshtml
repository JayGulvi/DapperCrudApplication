<h2 class="text-center" style="text-decoration-line:underline"><b>Add New Product</b></h2>
<div class="container mt-5" style="border: 2px solid black; width: 60%; background: linear-gradient(to bottom right, cyan, white);">
    <form asp-action="AddProduct" method="post" class="mt-4">
        <div class="row mb-3">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Pname" class="form-label">Product Name</label>
                <input type="text" asp-for="Pname" class="form-control" placeholder="Enter product name">
                <span asp-validation-for="Pname" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6 offset-md-3">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input type="text" asp-for="Price" class="form-control" placeholder="Enter product price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6 offset-md-3 text-center">
                <button type="submit" class="btn btn-primary px-4" style="width:100%">Add Product</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <a asp-action="Index" class="btn btn-secondary px-4" style="width:100%">Back to List</a>
        </div>
    </div>
    <br />
</div>